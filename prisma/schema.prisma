generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String @id @default(cuid())
  title       String
  slug        String @unique @default("test")
  time        String
  description String
  content     String
  category    String
  thumbnail   String @default("https://shahriyar.dev/images/me.jpg")
  status      String @default("draft")
  views       Int    @default(0)
}
